{% extends 'base.html.twig' %}

{% block title %}Person index{% endblock %}

{% block header %}
    <h1>Person index</h1>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Names</th>
                <th>Lastnames</th>
                <th>Email</th>
                <th>Birthdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for person in people %}
            <tr>
                <td>{{ person.id }}</td>
                <td>{{ person.names }}</td>
                <td>{{ person.lastnames }}</td>
                <td>{{ person.email }}</td>
                <td>{{ person.birthdate ? person.birthdate|date('m / d / Y') : '' }}</td>
                <td>
                    <a href="{{ path('person_show', {'id': person.id}) }}">show</a>
                    <a href="{{ path('person_edit', {'id': person.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('person_new') }}" class="card-link btn btn-primary">Create new</a>
{% endblock %}
