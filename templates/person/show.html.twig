{% extends 'base.html.twig' %}

{% block title %}Person{% endblock %}

{% block header %}
    <h1>Person</h1>
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Names</th>
                <td>{{ person.names }}</td>
            </tr>
            <tr>
                <th>Lastnames</th>
                <td>{{ person.lastnames }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ person.email }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ person.birthdate ? person.birthdate|date('m / d / Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('person_index') }}" class="btn btn-light float-left">
        <i class="fas fa-chevron-left" aria-hidden="true"></i>
        back to list
    </a>

    <a href="{{ path('person_edit', {'id': person.id}) }}" class="btn btn-primary float-right">edit</a>

    {{ include('person/_delete_form.html.twig') }}
{% endblock %}
